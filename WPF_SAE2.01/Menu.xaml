<Window
    x:Class="WPF_SAE2._01.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_SAE2._01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="250"
    Height="300"
    mc:Ignorable="d">
    <Grid Background="#FFD843D2">
        <StackPanel>
            <Button
                Margin="10,40,10,0"
                Panel.ZIndex="1"
                Background="#00DDDDDD"
                BorderBrush="#00707070"
                Click="Button_Click"
                Content="Visualiser Coureur"
                FontSize="20" />
            <Button
                x:Name="butCourse"
                Margin="10,50,10,0"
                Panel.ZIndex="1"
                Background="#00DDDDDD"
                BorderBrush="#00707070"
                Click="butCourse_Click"
                Content="Visualiser Course"
                FontSize="20" />
            <Button
                x:Name="butInscritCourse"
                Margin="10,50,10,0"
                Panel.ZIndex="1"
                Background="#00DDDDDD"
                BorderBrush="#00707070"
                Click="butInscritCourse_Click"
                Content="Inscrire Coureur"
                FontSize="20" />
        </StackPanel>
        <Rectangle
            Height="30"
            Margin="10,40,10,0"
            VerticalAlignment="Top"
            Panel.ZIndex="-1"
            Fill="#33FFFFFF"
            RadiusX="10"
            RadiusY="10" />
        <Rectangle
            Height="30"
            Margin="10,123,10,0"
            VerticalAlignment="Top"
            Panel.ZIndex="-1"
            Fill="#33FFFFFF"
            RadiusX="10"
            RadiusY="10" />
        <Rectangle
            Height="30"
            Margin="10,203,10,0"
            VerticalAlignment="Top"
            Panel.ZIndex="-1"
            Fill="#33FFFFFF"
            RadiusX="10"
            RadiusY="10" />
    </Grid>
</Window>
