<Window
    x:Class="WPF_SAE2._01.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_SAE2._01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Window1"
    Width="1080"
    Height="720"
    WindowState="Maximized"
    mc:Ignorable="d">
    <!--<Window.DataContext>
        <local:ApplicationData x:Name="data"/>
    </Window.DataContext>-->
    <Grid Background="#FFD843D2" ContextMenuClosing="Grid_ContextMenuClosing">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*" />
            <ColumnDefinition Width="33*" />
            <ColumnDefinition Width="33*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
        <Rectangle
            Margin="50,50,30,30"
            Panel.ZIndex="-2"
            Fill="#19000000"
            RadiusX="20"
            RadiusY="20" />
        <Rectangle
            Margin="40,40,40,40"
            Panel.ZIndex="-1"
            Fill="#FFFF81FA"
            RadiusX="20"
            RadiusY="20" />
        <StackPanel Margin="40,40,40,40">
                <Grid>
                    <Rectangle Fill="#FFE0E0E0"  Height="40" VerticalAlignment="Top" RadiusY="20" RadiusX="20"/>
                    <Rectangle Fill="#FFE0E0E0"  Height="20" VerticalAlignment="Top" Margin="0,20,0,0"/>
                <Label
                HorizontalAlignment="Center"
                Content="Connexion"
                FontFamily="Britannic Bold"
                FontSize="22"
                Foreground="#CC000000" />
                </Grid>
                <Grid Height="40" Margin="20,50,20,0">
                <Rectangle
                    MinWidth="20"
                    MinHeight="20"
                    Fill="#FFEC48F5"
                    RadiusX="20"
                    RadiusY="20" />
                <TextBox
                    x:Name="TBLogin"
                    Height="40"
                    Margin="10,2,0,0"
                    Panel.ZIndex="1"
                    Background="Transparent"
                    BorderBrush="#00ABADB3"
                    FontFamily="72 Black"
                    FontSize="28"
                    Foreground="#7F000000"
                    GotFocus="TBlogin_GotFocus"
                    LostFocus="TBlogin_LostFocus"
                    Text="Login" />
                <DataGrid
                    Name="logAgent"
                    MinHeight="150"
                    Margin="0,60,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding LesAgents}" />


            </Grid>
            <Grid Height="40" Margin="20,50,20,0">
                <Rectangle
                    MinWidth="20"
                    MinHeight="20"
                    Fill="#FFEC48F5"
                    RadiusX="20"
                    RadiusY="20" />
                <Label
                    x:Name="Lpassword"
                    Padding="10,5,5,5"
                    Content="Password"
                    FontFamily="72 Black"
                    FontSize="28"
                    Foreground="#7F000000" />
                <PasswordBox
                    x:Name="TBPassword"
                    Height="40"
                    Margin="10,2,0,0"
                    Panel.ZIndex="1"
                    Background="Transparent"
                    BorderBrush="#00ABADB3"
                    FontFamily="72 Black"
                    FontSize="28"
                    Foreground="Black"
                    GotFocus="TBpassword_GotFocus"
                    LostFocus="TBpassword_LostFocus"
                    PasswordChar="." />
                <DataGrid
                    Name="PassAggent"
                    MinHeight="150"
                    Margin="0,60,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding LesAgents}" />


            </Grid>
            <Button
                x:Name="butConnexion"
                Margin="70,70,70,0"
                Background="#7FFFFFFF"
                BorderBrush="#00000000"
                Click="butConnexion_Click"
                Content="Se connecter"
                FontSize="18" />
        </StackPanel>
            
        </Grid>
    </Grid>
</Window>